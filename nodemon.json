{
  "watch": ["server/src"],
  "ext": "ts,json",
  "ignore": [
    "server/src/**/*.spec.ts",
    "server/src/**/*.test.ts",
    "node_modules",
    ".git",
    "public/uploads",
    "prisma/generated"
  ],
  "exec": "ts-node server/src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": "1000",
  "verbose": true,
  "signal": "SIGTERM"
}
